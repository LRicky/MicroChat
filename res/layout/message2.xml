<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:paddingBottom="5dip"
    android:paddingLeft="80dip"
    android:paddingRight="8dip"
    android:paddingTop="5dip" >
    
    <ImageView 
        android:id="@+id/photoViewInChat2"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_marginLeft="5dip"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/TimeStamp2"
        android:layout_marginTop="5dip"/>

    <TextView
        android:id="@+id/ChatContent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/photoViewInChat2"
        android:layout_toLeftOf="@id/photoViewInChat2"
        android:background="@drawable/chatright"
        android:paddingLeft="10dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:paddingRight="15dip"
        android:text="hello" 
        android:textColor="#4D91BF"/>
        
        <TextView
        android:id="@+id/TimeStamp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="20:38" 
        android:textColor="#4D91BF"
        android:background="#F4F7FD"/>
  
    </RelativeLayout>
